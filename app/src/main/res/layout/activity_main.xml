<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    tools:context=".Main">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:id="@+id/r1">

<TextView
    android:id="@+id/dis"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:textSize="18sp"
    android:textStyle="bold"
    />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/r2"
    android:layout_marginTop="80sp"
    android:layout_width="500sp"
    android:layout_height="100sp"
    android:orientation="horizontal">
<ImageView
    android:layout_width="100sp"
    android:layout_height="100sp"
    android:layout_marginLeft="10sp"
    android:src="@drawable/a"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="places"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginLeft="160sp"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="700$"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginLeft="260sp"/>
    <TextView
        android:id="@+id/text2"
        android:layout_marginTop="6sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1DESember - 31DESEMBER"
        android:layout_below="@+id/text1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="160sp"/>


</RelativeLayout>
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_marginTop="10sp"
        android:layout_width="500sp"
        android:layout_height="100sp"
        android:orientation="horizontal"
        android:layout_below="@id/r2">
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/a"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resturant"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginLeft="160sp"/>
        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500$"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginLeft="260sp"/>
        <TextView
            android:id="@+id/text5"
            android:layout_marginTop="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1DESember - 21DESEMBER"
            android:layout_below="@+id/text4"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="160sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_marginTop="10sp"
        android:layout_width="500sp"
        android:layout_height="100sp"
        android:orientation="horizontal"
        android:layout_below="@id/r3">
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/a"/>
        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="restant"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginLeft="160sp"/>
        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500$"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginLeft="260sp"/>
        <TextView
            android:id="@+id/text8"
            android:layout_marginTop="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1DESember - 21DESEMBER"
            android:layout_below="@+id/text7"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="160sp"/>
    </RelativeLayout>


<Button
    android:id="@+id/home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="home"
    android:layout_marginTop="450sp"
    android:layout_marginLeft="6sp"/>
    <Button
    android:id="@+id/offers"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="offers"
    android:layout_marginTop="450sp"
    android:layout_marginLeft="100sp" />
    <Button
    android:id="@+id/reviews"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="reviews"
    android:layout_marginTop="450sp"
    android:layout_marginLeft="200sp"/>



</RelativeLayout>